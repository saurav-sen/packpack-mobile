<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.squill.squilloffice">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".LandingPageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".FullScreenNewsViewActivity"
            android:label="@string/title_activity_generic_topic_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FullScreenBookmarkViewActivity"
            android:label="@string/title_activity_generic_topic_list"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>
